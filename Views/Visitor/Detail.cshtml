
@model ProductViewModel

@{
    ViewData["Title"] = "Product Details";
    string imagePath = string.Empty;
    if (Model.Profile == null)
    {
        imagePath = "/images/img.jpg";
    }
    else
    {
        imagePath = "/images/" + Model.Profile;
    }
}

<div class="container mt-3">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="card h-100 shadow border-2 rounded">
                <img src="@imagePath" class="card-img-top h-50" alt="image not found" />
                <div class="card-body bg-warning bg-opacity-25">
                    <h5 class="card-title">@Model.Name</h5>
                    <hr class="my-2" />
                    <p class="card-text"><strong>Rate:</strong> @Model.Rate</p>
                    <hr />
                    <p class="card-text"><strong>Brand:</strong> @Model.Brand</p>
                    <hr />
                    <p class="card-text"><strong>Color:</strong> @Model.color</p>
                    <hr />
                    <p class="card-text"><strong>Generation:</strong> @Model.Gen</p>
                    <hr />
                    <p class="card-text"><strong>No.of Sim:</strong> @Model.no_of_sim</p>
                    <hr />
                    <p class="card-text"><strong>Os_Version:</strong> @Model.os_version</p>
                    <hr />
                    <p class="card-text"><strong>RAM:</strong> @Model.RAM</p>
                    <hr />
                    <p class="card-text"><strong>ROM:</strong> @Model.ROM</p>
                    @if (Model.IsActive)
                    {
                        <div>
                            <form method="post" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id">
                                <input type="submit" class="btn btn-success" value="Add to Cart" />
                            </form>
                        </div>
                    }
                    else
                    {
                        <p>This product is currently not available.</p>
                    }
                    <div>
                        <button class="btn btn-dark mt-2"><a class="text-decoration-none text-white" href="@Url.Action("Index", "Visitor")">Back to Products</a></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
