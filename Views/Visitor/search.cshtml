@model IEnumerable<ProductViewModel>


@{
    string imagePath = string.Empty;
}
@{ Layout = ViewBag.Layout;}

<div class="row">
    @foreach (var product in Model)
    {
        if (product.Profile == null)
        {
            imagePath = "/images/img.jpg";
        }
        else
        {
            imagePath = "/images/" + product.Profile;
        }

        <div class="col-md-4 mb-4">
            <div class="card h-100 bg-opacity-25 bg-info">
                <img src="@imagePath" class="card-img-top h-75" alt="image not found" />
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <hr />
                    <p class="card-text"><strong>Price:</strong> @product.Rate</p>
                    <a href="@Url.Action("Detail", "Visitor", new { id = product.Id })" class="btn btn-dark">Details</a> <br />
                    <button class="btn btn-dark mt-2"><a class="text-decoration-none text-white" href="@Url.Action("Index", "Visitor")">Back to Products</a></button>
                </div>
            </div>
        </div>
    }
</div>
