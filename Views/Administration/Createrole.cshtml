@model RoleViewModel

@{
    ViewBag.Title = "Create New Role";
}

<h1 class="text-center">Create New Role</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="CreateRole" asp-controller="Administration">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="mb-3">
                <label asp-for="RoleName" class="form-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span class="text-danger" asp-validation-for="RoleName"></span>
            </div>
            <div class="align-content-end">
                <button class="btn btn-success" type="submit">Save</button>
            </div>
        </form>
    </div>

</div>