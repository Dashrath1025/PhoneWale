@{ 

    int no = 1;
    }

@{
    ViewData["Title"] = "Likes page";
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.1/css/all.css" crossorigin="anonymous">

@model IEnumerable<UserLike>

<div class="text-success">@ViewData["success"]</div>
<div class="text-danger">@ViewData["error"]</div>

@if (Model.Count() == 0)
{
    <p>No likes found .</p>
}
else



{
    <div class="row row-cols-1 row-cols-md-3 g-4 ms-1 mt-3 me-1">
        @foreach (var likes in Model)
        {
            <div class="col mb-3">
                <div class="card h-100 shadow bg-opacity-25 bg-info">
                    <div class="card-body">

                        <h5 class="card-title"><strong>Product Name:</strong> @likes.PName</h5>
                        <div class="col-sm-4">
                            @* <button class="btn btn-dark"><a href="@Url.Action("Detail", "Visitor", new { id = likes.PId })" class="text-decoration-none text-white">Details</a> </button>*@
                            <button class="btn btn-dark"> @Html.ActionLink("Details", "Details", new { PId = likes.PId }, new { @class = "text-white text-decoration-none" })</button>
                        </div>
                        <br />
                        <div>
                            <button class="btn btn-outline-danger"><a href="@Url.Action("RemoveUserLike", "Userlogin", new { Lid = likes.Id })" class="text-decoration-none "><i class="fa fa-heart-broken text-black"></i></a></button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

}